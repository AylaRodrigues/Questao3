#include <stdio.h>
#include <stdlib.h>
#include <locale.h>

int main ()
{ 

	setlocale (LC_ALL,"");
	int quadrado[3][3];
	int player1[3][3];
	int player2[3][3];
	int vitoria = 0;
	
	//neutralizar os players
	for(int i = 0; i < 3; i++)
	{
		for(int j = 0; j < 3; j++)
		{
			player1[i][j] = 0;
			player2[i][j] = 0;
		}
	}
	//neutralizar o tabuleiro
	for(int i = 0; i < 9; i++)
	{
		for(int j = 0; j< 9; j++)
		{
			quadrado[i][j] = 0;
		}
	}
	
	//inicio do jogo
	printf("========================\n    JOGO DA VELHA\n  +---+---+---+---+\n");
	
	while(vitoria == 0)
	{	
		int valido = 0;
		int linhaP1, colunaP1;
		//jogada player 1
		printf("\n Primeiro jogador: \n");
		
		while(valido == 0){
			scanf("%d %d",&linhaP1,&colunaP1);
			if(quadrado[linhaP1-1][colunaP1-1] == 0)
			{
				player1[linhaP1-1][colunaP1-1] = 1;
				quadrado[linhaP1-1][colunaP1-1] = 1;
				valido++;
			}else{
				printf("-----Posição Inválido-----\n Tente novamente: \n");
			}
		}
		
		valido = 0;
		
		printf("\n Tabuleiro: \n");
		for(int y = 0; y < 3; y++)
		{	
			printf("    ");
			for(int z = 0; z < 3; z++)
			{
				if(quadrado[y][z] == 1)
				{
					printf(" 1 ");
				}else if(quadrado[y][z]==2)
				{
					printf(" 2 ");
				}else if(quadrado[y][z] == 0)
				{
					printf(" 0 ");
				}
			}
			printf("\n");
		}	
		
		int linhaP2, colunaP2;
		//jogada player 2
		printf("\n Segundo jogador: \n");
		
		while(valido == 0){
			scanf("%d %d",&linhaP2,&colunaP2);
			if(quadrado[linhaP2-1][colunaP2-1] == 0)
			{
				quadrado[linhaP2-1][colunaP2-1] = 2;
				player2[linhaP2-1][colunaP2-1] = 2;
				valido++;
			}else
			{
				printf("-----Posição Inválido-----\n Tente novamente: \n");
			}
		}
		
		printf("\n Tabuleiro: \n");
		for(int y = 0; y < 3; y++)
		{	
			printf("    ");
			for(int z = 0; z < 3; z++)
			{
				if(quadrado[y][z] == 1)
				{
					printf(" 1 ");
				}else if(quadrado[y][z]==2)
				{
					printf(" 2 ");
				}else if(quadrado[y][z] == 0)
				{
					printf(" 0 ");
				}
			}
			printf("\n");
		}
	}
	
	return 0;	
}

if	(quadrado[0][0] == quadrado[0][1] && quadrado[0][0] == quadrado [0][2] && quadrado[0][0] == '1')||
	(quadrado[0][0] == quadrado[1][0] && quadrado[0][0] == quadrado [2][0] && quadrado[0][0] == '1')||
	(quadrado[1][0] == quadrado[1][1] && quadrado[1][0] == quadrado [1][2] && quadrado[1][0] == '1')||
	(quadrado[2][0] == quadrado[2][1] && quadrado[2][0] == quadrado [2][2] && quadrado[2][0] == '1')||
	(quadrado[0][1] == quadrado[1][1] && quadrado[0][1] == quadrado [2][1] && quadrado[0][1] == '1')||
	(quadrado[0][2] == quadrado[1][2] && quadrado[0][2] == quadrado [2][2] && quadrado[1][0] == '1')||
	(quadrado[0][0] == quadrado[1][1] && quadrado[0][0] == quadrado [2][2] && quadrado[0][0] == '1')||
	(quadrado[0][2] == quadrado[1][1] && quadrado[0][2] == quadrado [2][0] && quadrado[0][2] == '1')||

	{ 
		printf("O jogador 1 é o vencedor");
	}

if
	(quadrado[0][0] == quadrado[0][1] && quadrado[0][0] == quadrado [0][2] && quadrado[0][0] == '2')||
	(quadrado[0][0] == quadrado[1][0] && quadrado[0][0] == quadrado [2][0] && quadrado[0][0] == '2')||
	(quadrado[1][0] == quadrado[1][1] && quadrado[1][0] == quadrado [1][2] && quadrado[1][0] == '2')||
	(quadrado[2][0] == quadrado[2][1] && quadrado[2][0] == quadrado [2][2] && quadrado[2][0] == '2')||
	(quadrado[0][1] == quadrado[1][1] && quadrado[0][1] == quadrado [2][1] && quadrado[0][1] == '2')||
	(quadrado[0][2] == quadrado[1][2] && quadrado[0][2] == quadrado [2][2] && quadrado[1][0] == '2')||
	(quadrado[0][0] == quadrado[1][1] && quadrado[0][0] == quadrado [2][2] && quadrado[0][0] == '2')||
	(quadrado[0][2] == quadrado[1][1] && quadrado[0][2] == quadrado [2][0] && quadrado[0][2] == '2')||

	{printf("O jogador 2 é o vencedor");
}

