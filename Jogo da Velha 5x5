//Questao3 - Jogo da velha 5 x 5
//Garotes de Programa- Ayla Rodrigues de Moura, Douglas Mareli, João Vitor Spala , Sofia Kitaeva - QuestÃ£o 3

#include <stdio.h>
#include <stdlib.h>
#include <locale.h>
#include <windows.h>

int main ()
{ 

	setlocale (LC_ALL,"");
	int quadrado[5][5];
	int player1[5][5];
	int player2[5][5];
	int vitoria = 0;
	
	//neutralizar os players
	for(int i = 0; i < 5; i++)
	{
		for(int j = 0; j < 5; j++)
		{
			player1[i][j] = 0;
			player2[i][j] = 0;
		}
	}
	//neutralizar o tabuleiro
	for(int i = 0; i < 5; i++)
	{
		for(int j = 0; j< 5; j++)
		{
			quadrado[i][j] = 0;
		}
	}
	
	//inicio do jogo
	SetConsoleTextAttribute (GetStdHandle(STD_OUTPUT_HANDLE), 0x0C);
	printf("=================\n  JOGO DA VELHA\n+---+---+---+---+\n");
	
	while(vitoria == 0)
	{	
		int valido = 0;
		int linhaP1, colunaP1;
		//jogada player 1
		SetConsoleTextAttribute (GetStdHandle(STD_OUTPUT_HANDLE), 0x0B);
		printf("\n>Primeiro jogador: \n");
		
		while(valido == 0){
			scanf("%d %d",&linhaP1,&colunaP1);
			if(quadrado[linhaP1-1][colunaP1-1] == 0)
			{
				player1[linhaP1-1][colunaP1-1] = 1;
				quadrado[linhaP1-1][colunaP1-1] = 1;
				valido++;
			}else{
				SetConsoleTextAttribute (GetStdHandle(STD_OUTPUT_HANDLE), 0xC7);
				printf("-----Posição Inválida-----\n Tente novamente: \n");
				SetConsoleTextAttribute (GetStdHandle(STD_OUTPUT_HANDLE), 0x0B);
			}
		}
		
		valido = 0;
		SetConsoleTextAttribute (GetStdHandle(STD_OUTPUT_HANDLE), 0x0B);
		printf("\n>Tabuleiro: \n");
		for(int y = 0; y < 5; y++)
		{	
			SetConsoleTextAttribute (GetStdHandle(STD_OUTPUT_HANDLE), 0x0E);
			printf("    ");
			for(int z = 0; z < 5; z++)
			{
				if(quadrado[y][z] == 1)
				{
					printf(" 1 ");
				}else if(quadrado[y][z]==2)
				{
					printf(" 2 ");
				}else if(quadrado[y][z] == 0)
				{
					printf(" 0 ");
				}
			}
			printf("\n");
		}
		//verificar se o jogador 1 ganhou
		if((quadrado [0][0] == 1 && quadrado [0][1] == 1 && quadrado [0][2] == 1 && quadrado [0][3] == 1 && quadrado [0][4] == 1)||
			(quadrado [0][0] == 1 && quadrado [1][0] == 1 && quadrado [2][0] == 1 && quadrado [3][0] == 1 && quadrado [4][0] == 1)||
			(quadrado [1][0] == 1 && quadrado [1][1] == 1 && quadrado [1][2] == 1 && quadrado [1][3] == 1 && quadrado [1][4] == 1)||
			(quadrado [2][0] == 1 && quadrado [2][1] == 1 && quadrado [2][2] == 1 && quadrado [2][3] == 1 && quadrado [2][4] == 1)||
			(quadrado [3][0] == 1 && quadrado [3][1] == 1 && quadrado [3][2] == 1 && quadrado [3][3] == 1 && quadrado [3][4] == 1)||
			(quadrado [4][0] == 1 && quadrado [4][1] == 1 && quadrado [4][2] == 1 && quadrado [4][3] == 1 && quadrado [4][4] == 1)||
			(quadrado [0][1] == 1 && quadrado [1][1] == 1 && quadrado [2][1] == 1 && quadrado [3][1] == 1 && quadrado [4][1] == 1)||
			(quadrado [0][2] == 1 && quadrado [1][2] == 1 && quadrado [2][2] == 1 && quadrado [2][3] == 1 && quadrado [4][2] == 1)||
			(quadrado [0][3] == 1 && quadrado [1][3] == 1 && quadrado [2][3] == 1 && quadrado [3][3] == 1 && quadrado [4][3] == 1)||
			(quadrado [0][4] == 1 && quadrado [1][4] == 1 && quadrado [2][4] == 1 && quadrado [3][4] == 1 && quadrado [4][4] == 1))
			{
			system("cls");
			SetConsoleTextAttribute (GetStdHandle(STD_OUTPUT_HANDLE), 0x27);
			printf("\n========================\nO JOGADOR 1 É O VENCEDOR\n+---+---+---+---+---+---\n");
			break;
		}
		
		//verifcar empate
		int ct =0;
		for(int i = 0; i < 5; i++)
		{
			for(int j = 0; j < 5; j++)
			{
				if(quadrado[i][j]==0)
				{
					ct++;
				}
			}
		}
		if(ct == 0)
		{
			system("cls");
			SetConsoleTextAttribute (GetStdHandle(STD_OUTPUT_HANDLE), 0x67);
			printf("\n========================\nO JOGO EMPATOU\n+---+---+---+---+---+---+\n");
			break;
			
		int linhaP2, colunaP2;
		//jogada player 2
		SetConsoleTextAttribute (GetStdHandle(STD_OUTPUT_HANDLE), 0x0B);
		printf("\n>Segundo jogador: \n");
		
		while(valido == 0){
			scanf("%d %d",&linhaP2,&colunaP2);
			if(quadrado[linhaP2-1][colunaP2-1] == 0)
			{
				quadrado[linhaP2-1][colunaP2-1] = 2;
				player2[linhaP2-1][colunaP2-1] = 2;
				valido++;
			}else
			{
				SetConsoleTextAttribute (GetStdHandle(STD_OUTPUT_HANDLE), 0xC7);
				printf("-----Posição Inválida-----\n Tente novamente: \n");
				SetConsoleTextAttribute (GetStdHandle(STD_OUTPUT_HANDLE), 0x0B);
			}
		}
		SetConsoleTextAttribute (GetStdHandle(STD_OUTPUT_HANDLE), 0x0B);
		printf("\n>Tabuleiro: \n");
		for(int y = 0; y < 5; y++)
		{	
			SetConsoleTextAttribute (GetStdHandle(STD_OUTPUT_HANDLE), 0x0E);
			printf("    ");
			for(int z = 0; z < 5; z++)
			{
				if(quadrado[y][z] == 1)
				{
					printf(" 1 ");
				}else if(quadrado[y][z]==2)
				{
					printf(" 2 ");
				}else if(quadrado[y][z] == 0)
				{
					printf(" 0 ");
				}
			}
			printf("\n");
		}
		//verificar se o jogador 2 ganhou
		if((quadrado [0][0] == 2 && quadrado [0][1] == 2 && quadrado [0][2] == 2 && quadrado [0][3] == 2 && quadrado [0][4] == 2)||
			(quadrado [0][0] == 2 && quadrado [1][0] == 2 && quadrado [2][0] == 2 && quadrado [3][0] == 2 && quadrado [4][0] == 2)||
			(quadrado [1][0] == 2 && quadrado [1][1] == 2 && quadrado [1][2] == 2 && quadrado [1][3] == 2 && quadrado [1][4] == 2)||
			(quadrado [2][0] == 2 && quadrado [2][1] == 2 && quadrado [2][2] == 2 && quadrado [2][3] == 2 && quadrado [2][4] == 2)||
			(quadrado [3][0] == 2 && quadrado [3][1] == 2 && quadrado [3][2] == 2 && quadrado [3][3] == 2 && quadrado [3][4] == 2)||
			(quadrado [4][0] == 2 && quadrado [4][1] == 2 && quadrado [4][2] == 2 && quadrado [4][3] == 2 && quadrado [4][4] == 2)||
			(quadrado [0][1] == 2 && quadrado [1][1] == 2 && quadrado [2][1] == 2 && quadrado [3][1] == 2 && quadrado [4][1] == 2)||
			(quadrado [0][2] == 2 && quadrado [1][2] == 2 && quadrado [2][2] == 2 && quadrado [2][3] == 2 && quadrado [4][2] == 2)||
			(quadrado [0][3] == 2 && quadrado [1][3] == 2 && quadrado [2][3] == 2 && quadrado [3][3] == 2 && quadrado [4][3] == 2)||
			(quadrado [0][4] == 2 && quadrado [1][4] == 2 && quadrado [2][4] == 2 && quadrado [3][4] == 2 && quadrado [4][4] == 2))
			{
			system("cls");
			SetConsoleTextAttribute (GetStdHandle(STD_OUTPUT_HANDLE), 0x27);
			printf("\n========================\nO JOGADOR 2 É O VENCEDOR\n+---+---+---+---+---+---\n");
			break;
			}
		}
	}
	
	return 0;	
}
