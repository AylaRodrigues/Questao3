//Questao3 - Jogo da velha 5 x 5
//Garotes de Programa- Ayla Rodrigues de Moura, Douglas Mareli, JÃµao Vitor Spala , Sofia Kitaeva - QuestÃ£o 3

#include <stdio.h>
#include <stdlib.h>
#include <locale.h>

int main ()
{ 

	setlocale (LC_ALL,"");
	int quadrado[5][5];
	int player1[5][5];
	int player2[5][5];
	int vitoria = 0;
	
	//neutralizar os players
	for(int i = 0; i < 5; i++)
	{
		for(int j = 0; j < 5; j++)
		{
			player1[i][j] = 0;
			player2[i][j] = 0;
		}
	}
	//neutralizar o tabuleiro
	for(int i = 0; i < 25; i++)
	{
		for(int j = 0; j< 25; j++)
		{
			quadrado[i][j] = 0;
		}
	}
	
	//inicio do jogo
	printf("========================\n    JOGO DA VELHA\n  +---+---+---+---+\n");
	
	while(vitoria == 0)
	{	
		int valido = 0;
		int linhaP1, colunaP1;
		//jogada player 1
		printf("\n Primeiro jogador: \n");
		
		while(valido == 0){
			scanf("%d %d",&linhaP1,&colunaP1);
			if(quadrado[linhaP1-1][colunaP1-1] == 0)
			{
				player1[linhaP1-1][colunaP1-1] = 1;
				quadrado[linhaP1-1][colunaP1-1] = 1;
				valido++;
			}else{
				printf("-----Posiçãoo Inválida-----\n Tente novamente: \n");
			}
		}
		
		valido = 0;
		
		printf("\n Tabuleiro: \n");
		for(int y = 0; y < 5; y++)
		{	
			printf("    ");
			for(int z = 0; z < 5; z++)
			{
				if(quadrado[y][z] == 1)
				{
					printf(" 1 ");
				}else if(quadrado[y][z]==2)
				{
					printf(" 2 ");
				}else if(quadrado[y][z] == 0)
				{
					printf(" 0 ");
				}
			}
			printf("\n");
		}
	
	return 0;	
}
